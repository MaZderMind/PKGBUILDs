# Maintainer: Sebastian Reimers <service@it-sreimers.de>
pkgname=baresip
pkgver=14.4.1
pkgrel=1
arch=(armv7h x86_64)
url="http://www.creytiv.com/baresip.html"
license=('BSD license')
depends=(glibc)
source=(https://github.com/studio-connect/baresip/archive/$pkgver.tar.gz)
md5sums=('599d70c5144f4d081bb071f321aed3b8')

build() {
    
    cd $pkgname-$pkgver
    curl https://github.com/studio-connect/baresip/compare/http_api.patch | patch -p1
    make
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}
