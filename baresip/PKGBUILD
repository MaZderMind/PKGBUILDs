# Maintainer: Sebastian Reimers <service@it-sreimers.de>
pkgname=baresip
pkgver=14.5.0
pkgrel=1
arch=(armv7h x86_64)
url="http://www.creytiv.com/baresip.html"
license=('BSD license')
depends=(glibc)
#options=(!strip)
source=(https://github.com/studio-connect/baresip/archive/$pkgver-alpha.tar.gz)
md5sums=('2bca69418f5550ee7cc0ea7582df6a6c')

build() {
    cd $pkgname-$pkgver-alpha
    curl https://github.com/studio-connect/baresip/compare/alsa_underrun_bug.patch | patch -p1
    curl https://github.com/studio-connect/baresip/compare/http_api.patch | patch -p1
    curl https://github.com/studio-connect/baresip/compare/opus_config.patch | patch -p1
    make
}

package() {
    cd $pkgname-$pkgver-alpha
    make DESTDIR="$pkgdir" install
}
