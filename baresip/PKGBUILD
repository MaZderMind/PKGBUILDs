pkgname=baresip
pkgver=0.4.9
pkgrel=1
arch=(armv7h x86_64)
url="http://www.creytiv.com/baresip.html"
license=('BSD license')
depends=(glibc)
source=(http://www.creytiv.com/pub/$pkgname-$pkgver.tar.gz)
md5sums=('c596ec3e3d0e6b1f0362f8a7cff3b566')

build() {
    
    cd $pkgname-$pkgver
#    curl https://github.com/studio-connect/baresip/compare/opus_mono.patch | patch -p1
#    curl https://github.com/studio-connect/baresip/compare/alsa_poll.patch | patch -p1
    make
}

package() {
    cd $pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}
