pkgname=opus
pkgver=1.1
pkgrel=1
pkgdesc="Codec designed for interactive speech and audio transmission over the Internet"
arch=(i686 x86_64 armv7h)
url="http://www.opus-codec.org/"
license=(BSD)
depends=(glibc)
options=('!libtool')
source=(http://ipv4.studio-connect.de/$pkgname-$pkgver-beta.tar.gz)
md5sums=('804f4c62a694f986f70b6a3a7b2e32e2')

build() {
  cd $pkgname-$pkgver-beta
  ./autogen.sh
  ./configure --prefix=/usr --enable-custom-modes --enable-fixed-point --disable-static
  make
}

#check() {
#  cd $pkgname-$pkgver-beta
#  make check
#}

package() {
  cd $pkgname-$pkgver-beta
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
